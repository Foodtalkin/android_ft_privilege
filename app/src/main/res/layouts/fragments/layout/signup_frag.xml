<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/pale_grey_two">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/dark_grey"
            android:padding="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Make every meal a Privilege, for only \nINR 1,200 for an entire year"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_name"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:maxLength="42"
                    android:hint="John Doe"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>
            <View
                android:id="@+id/line_name"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/warm_grey"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_email"
                    android:inputType="textEmailAddress"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:maxLength="42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="John@foodtalk.in"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>
            <View
                android:id="@+id/line_email"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/warm_grey"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone**"
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    />
                <EditText
                    android:id="@+id/et_phone"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="9999999999"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:textColor="@color/dark_grey"
                    android:background="@android:color/transparent"
                    />

            </LinearLayout>
            <View
                android:id="@+id/line_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/warm_grey"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="20dp"/>
            <LinearLayout
                android:id="@+id/btn_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_grey"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:clickable="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_margin="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VERIFY NUMBER"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="WE WILL SEND YOU AN OTP"
                            android:textColor="@color/pale_grey_two"
                            android:textSize="10sp"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        android:background="@color/dark_grey">
                        <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                            android:id="@+id/dot_progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            custom:amount="3"
                            custom:duration="@android:integer/config_mediumAnimTime"
                            custom:endColor="@color/light_blue_A400"
                            custom:startColor="@color/light_blue_A700"
                            custom:animationDirection="left"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your purchase will be linked to this phone number &amp; it will be used for future logins."
                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="We will send an One Time Password (OTP) at the
number above. Youâ€™ll need to enter the OTP in next step."/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>