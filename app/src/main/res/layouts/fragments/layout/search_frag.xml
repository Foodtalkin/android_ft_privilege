<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/ic_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:layout_centerVertical="true" />
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search a restaurant"
            android:textColorHint="@color/pale_grey"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/ic_search"
            android:background="@android:color/transparent"
            />
        <ImageView
            android:id="@+id/icon_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_alignParentRight="true"
            android:tint="@color/white"
            android:clickable="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar"
        android:fillViewport="true">
        <LinearLayout
            android:layout_below="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FILTER BY LOCATION"
                android:textColor="@color/light_grey_blue"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:id="@+id/btn_location1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:clickable="true"
                    android:paddingBottom="@dimen/margin_search_btns">
                    <View
                        android:id="@+id/circle_location1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gurgaon"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_location2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_location2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noida"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_location3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_location3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="South Delhi"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_location4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_location4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="North Delhi"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_location5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_location5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="East Delhi"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_location6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_location6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="West Delhi"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_location7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_location7"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Central Delhi"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_blue_grey"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FILTER BY COST"
                android:layout_marginTop="15dp"
                android:textColor="@color/light_grey_blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:id="@+id/btn_cost1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_cost1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ ₹ ₹ - BUDGET"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_cost2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_cost2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ ₹ ₹ - MID-RANGE"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_cost3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_cost3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹ ₹ ₹ - SPLURGE"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_blue_grey"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FILTER BY CUISINE"
                android:layout_marginTop="15dp"
                android:textColor="@color/light_grey_blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:id="@+id/btn_cuisine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_cuisine1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NORTH INDIAN"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_cuisine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_cuisine2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOUTH INDIAN"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_cuisine3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:paddingTop="@dimen/margin_search_btns"
                    android:paddingBottom="@dimen/margin_search_btns"
                    android:clickable="true"
                    >
                    <View
                        android:id="@+id/circle_cuisine3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_select"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ITALIAN"
                        android:layout_marginLeft="20dp"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/blue_grey"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/gradient_trans"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLY FILTERS"
            android:textColor="@color/white"
            android:textSize="14sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="18 RESULTS"
            android:textColor="@color/pale_grey_two"
            android:textSize="10sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/search_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_bar"
        android:background="@color/white"
        android:visibility="gone">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</RelativeLayout>