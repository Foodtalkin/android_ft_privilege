<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    </android.support.v7.widget.RecyclerView>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        layout="@layout/placeholder_internet"/>

    <LinearLayout
        android:id="@+id/placeholder_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fav"
            />
        <TextView
            android:id="@+id/tv_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textColor="@color/dark_grey"
            android:text="All your favorites will appear here."/>
        <TextView
            android:id="@+id/btn_offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse offers"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            android:padding="10dp"
            android:clickable="true"
            android:textColor="@color/bright_sky_blue"/>
    </LinearLayout>
</RelativeLayout>