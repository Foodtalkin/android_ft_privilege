<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/dark_grey">
    <RelativeLayout
        android:id="@+id/status_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_foodtalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOOD TALK\nPRIVILEGE"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/txt_foodtalk"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/group_3"
                android:layout_marginTop="68dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:layout_marginTop="40dp"
                android:text="Welcome aboard"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have succefully purchased
Food Talk Privilege for 1 year.  "
                android:layout_marginTop="20dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you!"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp">
            <TextView
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/dark_grey"
                android:layout_weight="1"
                android:padding="20dp"
                android:layout_marginRight="80dp"
                android:gravity="center"
                android:layout_marginLeft="80dp"
                android:text="Done"
                android:textSize="15sp"
                android:background="@drawable/btn_bg2"
                android:clickable="true"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>