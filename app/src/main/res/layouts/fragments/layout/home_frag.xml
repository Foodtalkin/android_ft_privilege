<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.foodtalk.privilege.LoginOtp"
    android:background="@color/pale_grey_two">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/dark_grey"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/pale_grey"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textSize="13sp"
            android:text="Start your 7 day free trial. Access deals, discounts and experiences"/>
        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="12sp"
            android:text="Start Trial"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/btn_bg2"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:layout_weight="1"
            />

            <LinearLayout
                android:id="@+id/footer"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/dark_grey"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_footer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pale_grey"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="Enable location access to see deals at nearby restaurants"/>
                <TextView
                    android:id="@+id/btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="12sp"
                    android:text="Enable"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/btn_bg2"/>
                <ImageView
                    android:id="@+id/btn_location_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:tint="@color/battleship_grey"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/footer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/dark_grey"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/tv_footer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pale_grey"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="Enable location access to see deals at nearby restaurants --"/>
                <TextView
                    android:id="@+id/btn_location1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="12sp"
                    android:text="Enable"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:clickable="true"
                    android:background="@drawable/btn_bg2"/>
                <ImageView
                    android:id="@+id/btn_location_close1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:padding="10dp"
                    android:clickable="true"
                    android:tint="@color/battleship_grey"/>
            </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/empty_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="30dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_history"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:text="No results for these filters. Please try again with diffrent filteres."/>
        <TextView
            android:id="@+id/btn_edit_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit filters"
            android:textColor="@color/bright_sky_blue"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginTop="30dp"/>
    </LinearLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/placeholder_internet"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
