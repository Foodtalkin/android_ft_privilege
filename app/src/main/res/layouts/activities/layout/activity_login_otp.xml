<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.foodtalk.privilege.LoginOtp"
    android:background="@color/dark_grey">
    <include
        android:id="@+id/action_bar_layout"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/action_bar_layout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify OTP"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Please enter 4 digit OTP \n sent to +91 978452154"
                android:textColor="@color/warm_grey"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38dp">

            <LinearLayout
                android:id="@+id/otp_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_otp1"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:maxLength="1"
                    android:background="@drawable/rect_grey"
                    />

                <TextView
                    android:id="@+id/tv_otp2"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:maxLength="1"
                    android:background="@drawable/rect_grey"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_otp3"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:maxLength="1"
                    android:background="@drawable/rect_grey"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/tv_otp4"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:maxLength="1"
                    android:background="@drawable/rect_grey"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/btn_resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resend OTP"
                android:textColor="@color/bright_sky_blue"

                android:clickable="true"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/tv_timer"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request another OTP in 22 seconds"
                android:background="@color/dark_grey"
                android:clickable="true"
                android:textColor="@color/warm_grey"
                android:padding="10dp"/>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/key1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/key4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="6"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/key7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="7"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="8"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="9"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"/>
            <TextView
                android:id="@+id/key0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <ImageView
                android:id="@+id/key_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_back_keyboard"
                android:layout_gravity="center"
                android:padding="24dp"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
