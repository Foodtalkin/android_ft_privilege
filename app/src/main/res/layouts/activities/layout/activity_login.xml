<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.foodtalk.privilege.LoginOtp"
    android:background="@color/dark_grey">
    <include
        android:id="@+id/action_bar_layout"
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/action_bar_layout">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/battleship_grey"
                android:textSize="15sp"
                android:textColor="@color/pale_grey"
                android:textColorHint="@color/pale_grey"
                android:hint="Your mobile"
                android:maxLength="10"/>
            <View
                android:id="@+id/line_phone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/battleship_grey"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:text="We will send you One-Time-Password (OTP) \n via SMS. Please enter OTP in next step."
                android:textColor="@color/warm_grey"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:textColor="@color/bright_sky_blue"
                android:layout_marginTop="40dp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:clickable="true"/>
            <RelativeLayout
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@color/dark_grey">
                <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                    android:id="@+id/dot_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    custom:amount="3"
                    custom:duration="@android:integer/config_mediumAnimTime"
                    custom:endColor="@color/light_blue_A400"
                    custom:startColor="@color/light_blue_A700"
                    custom:animationDirection="left"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/key1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/key4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="6"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/key7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="7"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="8"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <TextView
                android:id="@+id/key9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="9"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"/>
            <TextView
                android:id="@+id/key0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0"
                android:layout_weight="1"
                android:textSize="@dimen/keypad_txt_size"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="@dimen/keypad_padding"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
            <ImageView
                android:id="@+id/key_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_back_keyboard"
                android:layout_gravity="center"
                android:padding="24dp"
                android:clickable="true"
                android:background="@drawable/ripple_effect"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/alter_wrong_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:visibility="gone"
        android:background="@color/dark_grey">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="100dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_3"/>
            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:textSize="17sp"
                android:textAlignment="center"
                android:text="Uh oh! \nLooks like this number is not registered."/>
            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:textSize="17sp"
                android:textAlignment="center"
                android:text="Signup for Food Talk Privilege &amp;
get access to all offers for 1 year."/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_bg2"
                android:paddingRight="70dp"
                android:paddingLeft="70dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:clickable="true"
                >
                <TextView
                    android:id="@+id/tv_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUY"
                    android:textSize="16sp"
                    android:textColor="@color/dark_grey"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ₹999/Year"
                    android:textSize="13sp"
                    android:textColor="@color/dark_grey"/>
            </LinearLayout>
            <TextView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:textColor="@color/bright_sky_blue"
                android:layout_below="@+id/btn_buy"
                android:textSize="16sp"
                android:clickable="true"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
