<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--Text Styles-->

    <style name="TextStyleHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">#d8d8d8</item>
    </style>
    <style name="TextStyleActionbar">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/light_gold</item>
    </style>
    <style name="TextStyleNav">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16.8sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyleSubHead">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyleAddress">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextStyleThumbTitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextStyleThumbTxt">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/brownish_grey</item>
    </style>
    <style name="TextStyleRs">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>


</resources>
